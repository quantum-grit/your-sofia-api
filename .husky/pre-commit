#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "Running pre-commit checks..."

# Run prettier check
echo "Checking code formatting..."
pnpm exec prettier --check . || {
  echo "❌ Prettier check failed. Run 'pnpm format' to fix formatting issues."
  exit 1
}

# Run ESLint
echo "Running ESLint..."
pnpm lint || {
  echo "❌ ESLint check failed. Run 'pnpm lint:fix' to fix formatting issues."
  exit 1
}

echo "✅ Format + lint checks passed."